{
	"name": "@gooi/authoring-contracts",
	"version": "0.1.0",
	"type": "module",
	"exports": {
		"./*": {
			"types": "./src/*/contracts.ts",
			"bun": "./src/*/contracts.ts",
			"import": "./dist/*/contracts.js",
			"default": "./dist/*/contracts.js"
		},
		"./package.json": "./package.json"
	},
	"files": [
		"dist",
		"src"
	],
	"scripts": {
		"typecheck": "tsc --noEmit -p tsconfig.json",
		"test": "bun test",
		"build": "bun build ./src/envelopes/contracts.ts --outfile ./dist/envelopes/contracts.js --external @gooi/* --external zod && bun build ./src/lockfile/contracts.ts --outfile ./dist/lockfile/contracts.js --external @gooi/* --external zod",
		"lint": "biome check .",
		"lint:fix": "biome check . --write",
		"format": "biome format . --write"
	},
	"dependencies": {
		"@gooi/app-spec-contracts": "workspace:*",
		"@gooi/contract-primitives": "workspace:*",
		"@gooi/stable-json": "workspace:*",
		"zod": "^4.3.6"
	}
}
