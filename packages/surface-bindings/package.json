{
	"name": "@gooi/surface-bindings",
	"version": "0.1.0",
	"type": "module",
	"main": "./dist/bind/bind-surface-input.js",
	"types": "./src/bind/bind-surface-input.ts",
	"exports": {
		".": {
			"types": "./src/bind/bind-surface-input.ts",
			"bun": "./src/bind/bind-surface-input.ts",
			"import": "./dist/bind/bind-surface-input.js",
			"default": "./dist/bind/bind-surface-input.js"
		},
		"./bind": {
			"types": "./src/bind/bind-surface-input.ts",
			"bun": "./src/bind/bind-surface-input.ts",
			"import": "./dist/bind/bind-surface-input.js",
			"default": "./dist/bind/bind-surface-input.js"
		},
		"./contracts": {
			"types": "./src/bind/contracts.ts",
			"bun": "./src/bind/contracts.ts",
			"import": "./dist/bind/contracts.js",
			"default": "./dist/bind/contracts.js"
		},
		"./package.json": "./package.json"
	},
	"files": [
		"dist",
		"src"
	],
	"scripts": {
		"typecheck": "tsc --noEmit -p tsconfig.json",
		"test": "bun test",
		"build": "bun build ./src/bind/*.ts ./src/internal/*.ts --outdir ./dist --external zod",
		"lint": "biome check .",
		"lint:fix": "biome check . --write",
		"format": "biome format . --write"
	},
	"dependencies": {
		"@gooi/spec-compiler": "workspace:*",
		"zod": "^4.3.6"
	}
}
