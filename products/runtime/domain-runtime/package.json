{
	"name": "@gooi/domain-runtime",
	"version": "0.1.0",
	"type": "module",
	"main": "./dist/engine.js",
	"types": "./src/engine.ts",
	"exports": {
		".": {
			"types": "./src/engine.ts",
			"bun": "./src/engine.ts",
			"import": "./dist/engine.js",
			"default": "./dist/engine.js"
		},
		"./package.json": "./package.json"
	},
	"files": [
		"dist",
		"src"
	],
	"scripts": {
		"typecheck": "tsc --noEmit -p tsconfig.json",
		"test": "bun test",
		"build": "bun build ./src/engine.ts --outfile ./dist/engine.js --external @gooi/entrypoint-runtime --external @gooi/capability-contracts/capability-port --external @gooi/host-contracts/principal --external @gooi/surface-contracts/signal-envelope --external zod",
		"lint": "biome check .",
		"lint:fix": "biome check . --write",
		"format": "biome format . --write"
	},
	"dependencies": {
		"@gooi/capability-contracts": "workspace:*",
		"@gooi/entrypoint-runtime": "workspace:*",
		"@gooi/host-contracts": "workspace:*",
		"@gooi/surface-contracts": "workspace:*",
		"zod": "^4.3.6"
	}
}
