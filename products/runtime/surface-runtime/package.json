{
	"name": "@gooi/surface-runtime",
	"version": "0.1.0",
	"type": "module",
	"main": "./dist/engine.js",
	"types": "./src/engine.ts",
	"exports": {
		".": {
			"types": "./src/engine.ts",
			"bun": "./src/engine.ts",
			"import": "./dist/engine.js",
			"default": "./dist/engine.js"
		},
		"./kernel": {
			"types": "./src/kernel.ts",
			"bun": "./src/kernel.ts",
			"import": "./dist/kernel.js",
			"default": "./dist/kernel.js"
		},
		"./package.json": "./package.json"
	},
	"files": [
		"dist",
		"src"
	],
	"scripts": {
		"typecheck": "tsc --noEmit -p tsconfig.json",
		"test": "bun test",
		"build": "bun build ./src/engine.ts --outfile ./dist/engine.js --external @gooi/spec-compiler/contracts --external @gooi/surface-contracts/binding --external @gooi/surface-contracts/surface-request && bun build ./src/kernel.ts --outfile ./dist/kernel.js --external @gooi/spec-compiler/contracts --external @gooi/surface-contracts/surface-request",
		"lint": "biome check .",
		"lint:fix": "biome check . --write",
		"format": "biome format . --write"
	},
	"dependencies": {
		"@gooi/kernel-contracts": "workspace:*",
		"@gooi/surface-contracts": "workspace:*",
		"@gooi/spec-compiler": "workspace:*"
	}
}
