{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022", "DOM"],
		"module": "ESNext",
		"moduleResolution": "Bundler",

		"strict": true,
		"noUncheckedIndexedAccess": true,
		"exactOptionalPropertyTypes": true,

		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,

		"forceConsistentCasingInFileNames": true,
		"verbatimModuleSyntax": true,

		"types": ["bun"]
	}
}
